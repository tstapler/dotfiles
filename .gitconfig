[init]
	templatedir = ~/.gittemplates
[core]
	editor = vim
	excludesfile = ~/.gitignore
	symlinks = true
	hooksPath = $HOME/tylerstapler/.gittemplates
[web]
	browser = google-chrome
[push]
	default = matching
[color]
	ui = auto
[diff]
	tool = meld

[hub]
	protocol = ssh
[user]
	name = Tyler Stapler
	email = tystapler@gmail.com
; [commit]
; 	gpgsign = true
[alias]
	meld = !git difftool -t meld --dir-diff

[mergetool "meld"]
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"

[url "git@github.com:"]
	insteadOf = https://github.com/
