#!/usr/bin/env bash

INSTALLER_DIR="$HOME/stapler-installer"

cd "$INSTALLER_DIR" || exit

if [[ "$1" == "all" ]]; then
  sudo echo "Starting installer for all hosts"
  debops -i dynamic-inventory.py "$INSTALLER_DIR"/ansible/playbooks/install_all_machines.yml
else
  sudo echo "Starting installer for $HOSTNAME"
  debops -i dynamic-inventory.py "$(grep -l "$HOSTNAME" "$INSTALLER_DIR"/ansible/playbooks/install_*)"
fi
